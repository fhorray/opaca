{
  "name": "@opaca/cli",
  "version": "0.0.1",
  "private": false,
  "type": "module",
  "bin": {
    "opaca": "./src/index.ts"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsc --build tsconfig.build.json --force",
    "watch": "tsc -p tsconfig.json --watch",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "opaca": "workspace:*",
    "@opaca/dev": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.10.1",
    "typescript": "^5.0.0",
    "opaca": "workspace:*",
    "@opaca/dev": "workspace:*"
  }
}
